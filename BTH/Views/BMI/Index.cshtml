@model BTH.Models.BMI

@{
    ViewData["Title"] = "Tính BMI";
}

<h2>Tính chỉ số BMI</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Chiều cao (m):</label>
        <input asp-for="Height" class="form-control" placeholder="Ví dụ: 1.70" />
    </div>
    <div>
        <label>Cân nặng (kg):</label>
        <input asp-for="Weight" class="form-control" placeholder="Ví dụ: 60" />
    </div>
    <button type="submit" class="btn btn-success">Tính BMI</button>
</form>
